<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="15dp"
    tools:context=".activity.ProfileUpdateSuccessActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_gravity="center"

        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="15dp">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_8dp"
                app:srcCompat="@drawable/bye" />


            <TextView
                android:id="@+id/profileNameinprofilesucess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:textColor="@color/black"
                android:text="Hi, chndru"
                android:fontFamily="@font/open_sans_semibold"

                android:textSize="18sp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:ems="2"
                android:text="Your profile has been updated successfully"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                style="@style/fontfamily_number"/>





        </LinearLayout>




    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/btncontinueinprofilesucess"
        style="@style/fontfamily_mediun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_45dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_45dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/bg_btn_curved"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp" />


</LinearLayout>