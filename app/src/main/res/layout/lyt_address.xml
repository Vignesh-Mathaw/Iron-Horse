<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_marginTop="3dp"
    android:id="@+id/lytMain"
    android:padding="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSelect"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:src="@drawable/ic_unselect_radio"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Sivaprasad"
                android:textColor="#434E5D"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/dimen_14sp"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="left"
                android:text=""
                android:textColor="#7A828D"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="left"
                android:text=""
                android:textColor="#7A828D"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEdit"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/border_btn_red"
                    android:drawableLeft="@drawable/edit_icon"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="5dp"
                    android:text="Edit"
                    android:textColor="#ED3224"
                    android:textSize="@dimen/dimen_14sp" />

                <TextView
                    android:id="@+id/tvDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_btn_red"
                    android:drawableLeft="@drawable/ic_delete"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="left"
                    android:padding="5dp"
                    android:text="Delete"
                    android:textColor="#ED3224"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/dimen_14sp"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>